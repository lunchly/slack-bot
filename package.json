{
  "name": "@lunchly/slack-bot",
  "version": "0.1.0",
  "description": "A Slack bot that announces meals for your company.",
  "keywords": [
    "bots",
    "chatbots",
    "slack"
  ],
  "author": {
    "name": "Chris Vogt",
    "email": "mail@chrisvogt.me",
    "url": "https://www.chrisvogt.me"
  },
  "repository": "github:lunchly/slack-bot",
  "bugs": "https://github.com/lunchly/slack-bot/issues",
  "homepage": "https://github.com/lunchly/slack-bot",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "main": "index.js",
  "scripts": {
    "coverage": "./node_modules/.bin/nyc report --reporter=lcov",
    "dev": "DEBUG=* npm start",
    "lint": "./node_modules/.bin/xo",
    "posttest": "npm run coverage",
    "pretest": "npm run lint",
    "start": "node .",
    "test": "npm run unit",
    "unit": "SLACK_BOT_API_TOKEN=test ./node_modules/.bin/nyc ./node_modules/.bin/ava"
  },
  "dependencies": {
    "@lunchly/service-zerocater": "^0.2.0",
    "@slack/client": "^4.11.0",
    "globby": "^9.1.0"
  },
  "devDependencies": {
    "ava": "^1.3.1",
    "babel-eslint": "^10.0.1",
    "debug": "^4.1.1",
    "nyc": "^13.3.0",
    "proxyquire": "^2.1.0",
    "sinon": "^7.2.7",
    "xo": "^0.24.0"
  },
  "xo": {
    "rules": {
      "array-bracket-spacing": 0,
      "camelcase": 0,
      "object-curly-spacing": 0
    },
    "space": true
  }
}
